    <VerticalStackLayout>
        <HorizontalStackLayout VerticalOptions="Center">
            <Label 
            Margin="10"	
			FontSize="12"
			HorizontalOptions="Center"
			Text="This text was passed to this Detail-Page: "
			VerticalOptions="Center"/>
